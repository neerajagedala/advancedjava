import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.io.*;
// set classpath=C:\Users\neera\Downloads\mysql-connector-j-9.3.0.zip\mysql-connector-j-9.3.0\
class JdbcEx {

    public static void main (String[] args) throws SQLException, ClassNotFoundException{
     String driver=   "com.mysql.cj.jdbc.Driver";
     String url="jdbc:mysql://localhost:3306/school";
     String username="root";
     String pw="Neeraja@123.";
     try{
        InputStreamReader i=new InputStreamReader(System.in);
        BufferedReader b=new BufferedReader(i);
        System.out.println("Please enter username");
        String uname=b.readLine();
        System.out.println("Please enter password");
        String password=b.readLine();
        Class.forName(driver);

        Connection conn=DriverManager.getConnection(url,username,pw);
        java.sql.Statement stmt=conn.createStatement();
        String qry="select bankbalance from bankbalance where uname='"+uname+"' AND password='"+password+"'";
        System.out.println("query is:"+qry);
        java.sql.ResultSet rs=stmt.executeQuery(qry);
        if(rs.next()){
            System.out.println("Balance is:"+rs.getInt(1));
        }
        else{
            System.out.println("Invalid Credentials");
        }
        conn.close();    
    }
    catch(Exception e){
        System.out.println(e);
    }
}

    
    
}
// second program
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.io.*;
// set classpath=C:\Users\neera\Downloads\mysql-connector-j-9.3.0.zip\mysql-connector-j-9.3.0\
class JdbcEx {

    public static void main (String[] args) throws SQLException, ClassNotFoundException{
     String driver=   "com.mysql.cj.jdbc.Driver";
     String url="jdbc:mysql://localhost:3306/school";
     String username="root";
     String pw="Neeraja@123.";
     try{
        InputStreamReader i=new InputStreamReader(System.in);
        BufferedReader b=new BufferedReader(i);
        System.out.println("Please enter username");
        String uname=b.readLine();
        System.out.println("Please enter password");
        String password=b.readLine();
        Class.forName(driver);

        Connection conn=DriverManager.getConnection(url,username,pw);
        String qry="select bankbalance from bankbalance where uname= ? and password= ? ";
        java.sql.PreparedStatement stmt=conn.prepareStatement(qry);
        stmt.setString(1,uname);
        stmt.setInt(2,Integer.parseInt(password));
        System.out.println("query is:"+qry);
        java.sql.ResultSet rs=stmt.executeQuery();
        if(rs.next()){
            System.out.println("Balance is:"+rs.getInt(1));
        }
        else{
            System.out.println("Invalid Credentials");
        }
        conn.close();    
    }
    catch(Exception e){
        System.out.println(e);
    }
}

    
    
}
